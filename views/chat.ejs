<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>ChatApp</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.socket.io/4.7.5/socket.io.min.js"></script>
  <style>
    body {
      background: linear-gradient(135deg, #2575fc 0%, #6a11cb 100%);
      height: 100vh;
      display: flex;
      justify-content: center;
      align-items: center;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }
    .chat-container {
      width: 100%;
      max-width: 600px;
      height: 80vh;
      background: #fff;
      border-radius: 20px;
      box-shadow: 0px 8px 20px rgba(0,0,0,0.2);
      display: flex;
      flex-direction: column;
      overflow: hidden;
    }
    .chat-header {
      background: #2575fc;
      color: #fff;
      padding: 15px;
      text-align: center;
      font-weight: bold;
    }
    .chat-messages {
      flex: 1;
      padding: 15px;
      overflow-y: auto;
      background: #f8f9fa;
    }
    .message {
      margin-bottom: 12px;
      padding: 10px 15px;
      border-radius: 12px;
      max-width: 70%;
      clear: both;
    }
    .message.self {
      background: #2575fc;
      color: #fff;
      margin-left: auto;
    }
    .message.other {
      background: #e9ecef;
      color: #000;
      margin-right: auto;
    }
    .chat-input {
      display: flex;
      border-top: 1px solid #ddd;
    }
    .chat-input input {
      flex: 1;
      border: none;
      padding: 15px;
      outline: none;
    }
    .chat-input button {
      border: none;
      padding: 15px 20px;
      background: #2575fc;
      color: #fff;
      font-weight: bold;
    }
  </style>
</head>
<body>
  <div class="chat-container">
    <div class="chat-header">
      ChatApp ðŸ’¬ - <span id="username"><%=name %></span>
    </div>
    <div class="chat-messages" id="messages">
      <span class="active" id="active" style="background-color: black;"></span>
    </div>
    <div class="chat-input">
      <input type="text" id="messageInput" placeholder="Type a message..." required>
      <button id="sendBtn">Send</button>
    </div>
  </div>

  <script>
    // connect to backend
    const socket = io();


    // send message
    const sendBtn = document.getElementById("sendBtn");
    const input = document.getElementById("messageInput");
    const messagesDiv = document.getElementById("messages");
    const active=document.getElementById("active")


    input.addEventListener("input",()=>{
      socket.emit("typing",{user:`<%=name %>`})
    })
const p= document.createElement("p");
    socket.on("isActive",(data)=>{
      active.innerHTML=""
         p.innerText=`<%=name %>`+""+" is typing...";
      active.appendChild(p);
    })

    sendBtn.addEventListener("click", () => {
      const msg = input.value.trim();
      if (msg) {
        socket.emit("chatMessage", {user:`<%=name%>`, text: msg });
        input.value = "";
      }
    });

    input.addEventListener("keypress", (e) => {
      if (e.key === "Enter") sendBtn.click();
      p.innerText=""
    });

    // receive messages
    socket.on("broadcastMessage", (data) => {
      const div=document.createElement("div");  
      div.innerText=(data.user)+": "+(data.text);
      div.style.backgroundColor="lightgreen";
      div.style.padding="5px"
      div.style.borderTopLeftRadius="15px"
      div.style.marginTop="2px"
      messagesDiv.appendChild(div)
      
    });
  </script>
</body>
</html>